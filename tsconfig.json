{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true, // Allows JavaScript files
    "checkJs": false, // Turns off type checking for JavaScript files
    "esModuleInterop": true // Ensures compatibility with CommonJS modules
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": [
    "src/**/*",
    "_js_parser/**/*.js" // Ensure JavaScript parser files are included
  ]
}
